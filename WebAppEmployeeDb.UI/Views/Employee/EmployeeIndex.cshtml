@model EmployeesListViewModel

@{
    ViewBag.Title = "Сотрудники";
}

<p>
    <form asp-controller="Employee" asp-action="EmployeeIndex">
            Имя:        <input type="text" name="searchName" />
            Должность:    <input type="text" name="searchJobTitle" />
            Подразделение: <input type="text" name="searchSubdivision" />
            <input type="submit" value="Найти" />
    </form>
</p>

<p>
    <div class="col text-md-center pt-1">
        <a asp-action="EmployeeCreate" class="btn btn-outline-dark">Добавить сотрудника</a>
    </div>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees.First().Subdivision)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => employee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.Subdivision)
                </td>
                <td>
                    <a asp-action="EmployeeEdit" asp-route-id="@employee.Id">Edit</a> |
                    <a asp-action="EmployeeDetails" asp-route-id="@employee.Id">Details</a> |
                    <a asp-action="EmployeeDelete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>